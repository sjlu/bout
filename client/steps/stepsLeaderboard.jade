div.section-header
  | Leaderboard
div.section-body
  div.row.hidden-xs.hidden-sm
    canvas#chart
  br
  div.row
    table.table.table-bordered
      thead
        th
        th
          | Name
        th
          | Steps
      tbody
        tr(ng-repeat="(i,friend) in leaderboard", ng-class="{info: friend._id === user._id}")
          td
            strong
              | {{i+1}}
          td
            div
              div.gravatar
                img(ng-src="{{friend.gravatar}}")
                | &nbsp;&nbsp;{{friend.username}}
                span.bold(ng-show="friend._id === user._id")
                  | &nbsp;(you)
          td
            | {{friend.steps | number}}